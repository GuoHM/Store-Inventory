
@{
    ViewBag.Title = "AssignDepRep";
}




<div class="col-xs-2 column">
    @Html.Partial("~/Views/DepManager/SideBar.cshtml")
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-offset-3 column">

            <form action="saveNewRep" class="rep-form">

                <h2>Appoint Department Representative</h2> <br /><br />
                <div class="form-group">
                    <label>Current Department Rep : </label>
                    &nbsp;&nbsp;
                    @for (int i = 0; i < ViewBag.depList.Count; i++)
                    {
                        if (ViewBag.depList[i].UserType == "DeptRep")
                        {

                            <label> @ViewBag.depList[i].UserName</label>
                        }
                    }

                </div>

                <div class="form-group ">
                    <label class="control-label col-sm-2" for="select">
                        New Department Rep
                    </label>




                    <select class="form-control" name="dropdown1">

                        @for (int i = 0; i < ViewBag.depList.Count; i++)
                        {
                            if (ViewBag.depList[i].UserType != "DeptHead" && ViewBag.depList[i].UserType != "DeptRep" && ViewBag.depList[i].UserType != "InterimDepHead")

                            {
                                <option value="@ViewBag.depList[i].Id"> @ViewBag.depList[i].UserName </option>
                            }


                        }

                    </select>
                </div>

                <br />

                <button type="submit" class="btn btn-primary">Submit</button>

            </form>
        </div>

    </div>
</div>










