
@{
    ViewBag.Title = "dashBoard";
}


<div class="col-xs-2 column">
    @Html.Partial("~/Views/DepManager/SideBar.cshtml")
</div>


    <div class="col-sm-offset-3">
        <h2>Dashboard </h2> <br /><br />
    </div>

    <div class="col-sm-offset-3">
        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>Pending Requests</h3>
                        <h4>@ViewBag.pendingRequest</h4>
                        <p><a href="/DepManager/ApproveOrReject" class="btn btn-primary" role="button">Approve/Reject</a> </p>
                    </div>
                </div>
            </div>

            <div class="col-sm-8 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>Total Items Approved</h3>
                        <h4>@ViewBag.approved</h4><br /><br />
                       
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3>Total Items Rejected</h3>
                        <h4>@ViewBag.rejected</h4><br /><br />

                    </div>
                </div>
            </div>
        </div>
    </div>
    

   





