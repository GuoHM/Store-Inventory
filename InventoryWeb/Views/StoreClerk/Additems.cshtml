
@{
    ViewBag.Title = "AddItems";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="col-xs-2 column">
    @Html.Partial("~/Views/StoreClerk/SideBar.cshtml")
</div>
<div class="col-xs-10 column">


    <div class="panel-body" style="padding-bottom: 0px;">   
        <div class="panel panel-default">
            <div class="panel-heading">List of PO</div>m
            <div class="panel-body">
                <table id="AddItems"></table>
				<div style="margin-top:8px">
					<input type="button" value="Update" onclick="UpdateQuantity()" class="btn btn-primary" style="float:right" />

				</div>
                </div>
            </div>
        </div>
    </div>



<div class="modal fade" id="ApproveRequestModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                   Purchase order detail
                </h4>
            </div>
            <!-- Modal Body -->
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-sm-3 control-label"
                               for="date">Date</label>
                        <div class="col-sm-8">
                            <h5 id="date"></h5>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"
                               for="orderNo">Order NO.</label>
                        <div class="col-sm-8">
                            <h5 id="orderNo"></h5>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"
                               for="supplier">Supplier</label>
                        <div class="col-sm-8">
                            <h5 id="supplier"></h5>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"
                               for="expected">Expected</label>
                        <div class="col-sm-8">
                            <h5 id="expected"></h5>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label"
                               for="status">Status</label>
                        <div class="col-sm-8">
                            <h5 id="status"></h5>
                        </div>
                    </div>
                </form>
                <table class="table table-condensed" id="ShowPurchaseDetails"></table>             
            </div>           
        </div>
    </div>
</div>

<div id="successModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form id="deleteForm">
				<div class="modal-header">
					<h4 class="modal-title">Success</h4>
					<button type="button" class="close" data-dismiss="modal"
							aria-hidden="true">
						&times;
					</button>
				</div>
				<div class="modal-body">
					<p>Cancelled PO </p>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-success center-block" data-dismiss="modal"
						   value="OK" onclick="window.location.href='/StoreClerk/Additems'">
				</div>
			</form>
		</div>
	</div>
</div>

<script src="~/Scripts/bootstrap-table.js"></script>
<script src="~/Scripts/tables/Additems.js"></script>
<script src="~/Scripts/ShowPurchaseDetails.js"></script>

<script src="~/Scripts/bootstrap-table-export.js"></script>
<script src="//rawgit.com/hhurz/tableExport.jquery.plugin/master/tableExport.js"></script>

