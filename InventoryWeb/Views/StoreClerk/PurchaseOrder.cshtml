
@{
    ViewBag.Title = "PurchaseOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-xs-2 column">
    @Html.Partial("~/Views/StoreClerk/SideBar.cshtml")
</div>
<div class="col-xs-10 column">


    <div class="panel-body" style="padding-bottom: 0px;">
        <div class="panel panel-default">
            <div class="panel-heading">Searched Itemed</div>
            <div class="panel-body">
                <table id="SearchItemTable" class="table-condensed"></table>
            </div>
        </div>
    </div>

    <div class="panel-body" style="padding-bottom: 0px;">
        <div class="panel panel-default">
            <div class="panel-heading">Item Added</div>
            <div class="panel-body">
                <table id="ItemAddedTable" class="table-condensed"></table>
                <div style="margin-top:8px">
                    <input type="button" value="Generate low stock" onclick="lowStock()" class="btn btn-primary" />
                    <input type="button" value="Confirm" onclick="confirm()" class="btn btn-primary" style="float:right" />
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="close"
                            data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        Confirm order
                    </h4>
                </div>
                <!-- Modal Body -->
                <div class="modal-body">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-sm-4 control-label"
                                   for="supplierAddress">Supplier Address</label>
                            <div class="col-sm-8">
                                <textarea class="form-control" rows="3"
                                          id="supplierAddress"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label"
                                   for="delieverTo">Deliever To</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control"
                                       id="delieverTo" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label"
                                   for="attentionTo">Attention To</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control"
                                       id="attentionTo" readonly />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label"
                                   for="dateToDeliver">Date to the delivered by</label>
                            <div class="col-sm-8">
                                <input type="date" class="form-control"
                                       id="dateToDeliver" required />
                            </div>
                        </div>
                    </form>
                    <table class="table table-condensed" id="confirmTable"></table>
                    <div class="row">
                        <div class="col-sm-12">
                            <h4 id="totalPrice" class="pull-right"></h4>
                        </div>
                    </div>
                </div>
                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger"
                            data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary" onclick="savePurchaseOrder()">
                        Confirm
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div id="successModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form id="deleteForm">
                    <div class="modal-header">
                        <h4 class="modal-title">Success</h4>
                        <button type="button" class="close" data-dismiss="modal"
                                aria-hidden="true">
                            &times;
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Successfully Order!</p>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-success center-block" data-dismiss="modal"
                               value="OK" onclick="window.location.href='/StoreClerk/PurchaseOrder'">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/Scripts/bootstrap-table.js"></script>
    <script src="~/Scripts/tables/PurchaseOrder.js"></script>
    <script src="~/Scripts/bootstrap-table-export.js"></script>
    <script src="//rawgit.com/hhurz/tableExport.jquery.plugin/master/tableExport.js"></script>
    <script src="~/Scripts/PurchaseItemChoose.js"></script>
</div>


